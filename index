    <div id="result"></div>

    <script>
        function calculateResult() {
            const form = document.getElementById('quiz-form');
            const formData = new FormData(form);
            const counts = {};

            for (let [key, value] of formData.entries()) {
                counts[value] = (counts[value] || 0) + 1;
            }

            let topCategory = null;
            let maxCount = 0;
            for (let category in counts) {
                if (counts[category] > maxCount) {
                    maxCount = counts[category];
                    topCategory = category;
                }
            }

            displayResult(topCategory);
        }

        function displayResult(category) {
            const results = {
                "Thoughtful Reflector": {
                    description: "You bring depth, insight, and emotional awareness to the team.",
                    slides: [
                        {title: "What‚Äôs Blocking You", prompt: "What‚Äôs one thing slowing you down."},
                        {title: "Joy Sparks", prompt: "One fun, funny, or feel-good moment from a recent project or process."},
                        {title: "Learning Wishlist", prompt: "One thing you want to learn or improve."}
                    ]
                },
                "Results Driver": {
                    description: "You keep the team moving forward and focused on outcomes.",
                    slides: [
                        {title: "What‚Äôs Everyone Working On", prompt: "Share a couple of sentences about a project you‚Äôre excited to be working on and why."},
                        {title: "Try Something New", prompt: "A new tool, method, or workflow you‚Äôre testing out (or want to test out)."},
                        {title: "What‚Äôs Blocking You", prompt: "What‚Äôs one thing slowing you down."}
                    ]
                },
                "Bold Innovator": {
                    description: "You thrive on fresh ideas and love testing new approaches.",
                    slides: [
                        {title: "Try Something New", prompt: "A new tool, method, or workflow you‚Äôre testing out (or want to test out)."},
                        {title: "Idea Lab", prompt: "Pitch an idea or approach to learning that you want to try‚Äîeven if it‚Äôs outlandish or experimental."},
                        {title: "Learning Wishlist", prompt: "One thing you want to learn or improve."}
                    ]
                },
                "Team Energizer": {
                    description: "You spark joy and build bridges across the team.",
                    slides: [
                        {title: "Joy Sparks", prompt: "One fun, funny, or feel-good moment from a recent project or process."},
                        {title: "What‚Äôs Everyone Working On", prompt: "Share a couple of sentences about a project you‚Äôre excited to be working on and why."},
                        {title: "Feedback Loop", prompt: "Some recent feedback you received and how it‚Äôs being used."}
                    ]
                },
                "Data Dive": {
                    description: "You bring clarity through feedback, metrics, and analysis.",
                    slides: [
                        {title: "Feedback Loop", prompt: "Share a piece of feedback you or the team received and how it‚Äôs being used to improve something."},
                        {title: "What‚Äôs Everyone Working On", prompt: "Share a quick update with a data point or insight."},
                        {title: "What‚Äôs Blocking You", prompt: "Share a blocker and any patterns or trends you‚Äôve noticed."}
                    ]
                }
            };

            const result = results[category];
            const container = document.getElementById("result");
            container.innerHTML = `<h2>Your Quiz Result</h2><p><strong>${category}</strong>: ${result.description}</p>`;
            container.innerHTML += "<h3>Slides You'll Share On:</h3><ul>";
            result.slides.forEach(slide => {
                container.innerHTML += `<li><strong>${slide.title}</strong>: ${slide.prompt}</li>`;
            });
            container.innerHTML += "</ul>";
        }
    </script>
